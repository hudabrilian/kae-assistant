{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src", "src/languages/**/*.json"]
}
